<div class="pageWrap">
    {{> templates-header}}

    <div class="borrower-profile-wrapper">
        <div class="row">
            <div class="small-12 medium-7 columns loan-figure left-content">
                {{> molecules-loan-figure-multiple-photos}}
            </div>
            <div class="small-12 medium-5 columns right-content">
                {{#inPfp}}
                    {{> molecules-pfp-meter}}
                {{/inPfp}}
                {{^inPfp}}
                    {{> molecules-current-status-meter}}
                {{/inPfp}}
                {{> molecules-loan-gist}}
                {{> molecules-lend-action}}
            </div>
        </div>

        <hr class="line-break"/>

        <div class="row">
            <div class="small-12 columns">
                {{> molecules-more-loan-info}}
            </div>
        </div>

        <div class="show-for-small-down">
            <hr class="line-break"/>
        </div>

        <div class="row story">
            <div class="small-12 medium-7 columns left-content">
                {{> organisms-loan-story}}
                <hr class="line-break"/>
                {{> molecules-is-special}}
                <hr class="line-break"/>
                {{> molecules-lenders-teams}}

                <div class="show-for-small-only">
                    <hr class="line-break"/>
                </div>
            </div>

            <div class="small-12 medium-5 columns right-content">
                {{> molecules-loan-details}}
            </div>
        </div>
    </div>
</div>

