<div class="small-12 large-9 columns borrower-dashboard-main">
	<div class="row">
		{{! small-6 large-3 }}
		{{> 01-molecules/51-borrower-dashboard/01-borrower-info-card}}
		<div class="small-6 large-9 columns">

			{{! fundraising_info and prettyStatus are mutually exclusive (except for pfp)}}
			{{#prettyStatus}}
				<h2>
					{{{prettyStatus}}}
				</h2>
			{{/prettyStatus}}

			{{#fundraising_info}}
				{{#inPfp}}
					{{> 01-molecules/15-loan-sections/02-pfp-meter}}
				{{/inPfp}}

				{{#inRaised}}
					{{> 01-molecules/51-borrower-dashboard/03-loan-status-raised}}
				{{/inRaised}}

				{{#inReview}}
					{{> 01-molecules/51-borrower-dashboard/04-loan-status-in-review}}
				{{/inReview}}

				{{^inPfp}}
					{{^inRaised}}
						{{^inReview}}
							{{> 01-molecules/15-loan-sections/03-current-status-meter}}
						{{/inReview}}
					{{/inRaised}}
				{{/inPfp}}
			{{/fundraising_info}}

			<!--TODO:move this into template when it's built-->
			{{#borrowerActionButton}}
				<a href="{{borrowerActionButton.buttonUrl}}" class="button">{{borrowerActionButton.buttonText}}</a>
			{{/borrowerActionButton}}
		</div>
	</div>

	{{#repayments}}
		{{> 02-organisms/50-borrower-dashboard/03-upcoming-repayments }}
	{{/repayments}}
</div>
<div class="spacer" style="clear:both"></div>
