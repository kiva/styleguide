<section class="comments-and-updates">
	<div class="ac-title ac-container comments-and-updates-title" data-kv-accordion aria-controls="ac-comments-and-updates-body" aria-expanded="false">
		<h2>Comments &amp; Updates (<span class="comments-and-updates-count">{{commentsAndUpdatesCount}}</span>)</h2>
		<div class="ac-dropdown-icon">
			<svg class="icon icon-large-chevron loan-tags-dropdown">
				<use xlink:href="#icon-large-chevron"></use>
			</svg>
		</div>
	</div>
	<div class="ac-body" id="ac-comments-and-updates-body" aria-hidden="true">
        {{#allowCommenting}}
            <form method="post" action="{{url}}" class="comment-form">
                <fieldset>
                    <div class="field-container">
                        <label for="comment-field" style="display:none;">Comment</label>
                        <textarea id="comment-field" rows="8"></textarea>
                    </div>
                </fieldset>
            </form>
            <div class="comment-submit-block">
                <button class="button setting comment-submit">Comment</button>
                <small><a class="black-underlined" data-reveal-id="conversation-guidelines-lightbox">Kiva conversation guidelines</a></small>
            </div>
            <div class="subscribe-block" {{#isSubscribed}}style="display: none"{{/isSubscribed}}>
                <button class="button setting comment-subscribe">Subscribe</button>
                <small>to be notified of replies</small>
            </div>
            <div class="unsubscribe-block" {{^isSubscribed}}style="display: none"{{/isSubscribed}}>
                <button class="button setting comment-unsubscribe">Unsubscribe</button>
                <small>to not be notified of replies</small>
            </div>
        {{/allowCommenting}}

        <ul class="updates inline-list">
            {{#updates}}
                <li class="update">
                    <a href="{{url}}">Update - {{title}}</a>
                    Posted by {{authorName}} from {{authorLocation}},<br>{{date}}
                </li>
            {{/updates}}
        </ul>
		<ul class="comments inline-list">
			{{#comments}}
                {{> 01-molecules/06-components/08-loan-comment}}
			{{/comments}}
		</ul>

        <div class="ac-body" id="ac-more-comments-body" aria-hidden="true">
            <p class="ac-title black-underlined text-center hide-more-comments" data-kv-accordion aria-controls="ac-more-comments-body" aria-expanded="false">
                Hide
            </p>
        </div>
        {{#showSpilloverMessageForComments}}
            <p class="ac-title black-underlined text-center show-more-comments" data-kv-accordion aria-controls="ac-more-comments-body" aria-expanded="false">
                Show all comments
            </p>
        {{/showSpilloverMessageForComments}}
	</div>
    <ul class="spillover-comments inline-list" style="display: none;">
        {{#spilloverComments}}
            {{> 01-molecules/06-components/08-loan-comment}}
        {{/spilloverComments}}
    </ul>

	{{#conversationGuidelinesHelpText}}
		{{> 01-molecules/10-lightbox/04-help-text-lightbox}}
	{{/conversationGuidelinesHelpText}}
</section>