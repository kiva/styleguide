<section class="loan-details">
    <h2 class="ac-title ac-container" data-kv-accordion aria-controls="ac-loan-details-body" aria-expanded="true">
        Loan Details
        <span class="ac-dropdown-icon">
            <svg class="icon icon-large-chevron">
                <use xlink:href="#icon-large-chevron"></use>
            </svg>
        </span>
    </h2>
    <div class="ac-body" id="ac-loan-details-body" aria-hidden="false">
        <div class="loan-term">
            <svg class="icon icon-recycle"><use xlink:href="#icon-recycle"></use></svg>
            <h2><a class="black-underlined">Repayment Term:</a></h2>
            <div class="green-bolded">{{numberOfMonths}} months</div>
            {{#hasDualStatement}}
                <div>(<a class="black-underlined" href="#repaymentSchedule">Additional Information</a>)</div>
            {{/hasDualStatement}}
        </div>

        <div class="loan-stats">
            <div class="stat">
                <a class="black-underlined">Repayment schedule:</a>
                <strong>{{repaymentFrequency}}</strong>
            </div>
            <div class="stat">
                <a class="black-underlined">Disbursal date:</a>
                {{#disbursalDate}}
                    <strong>{{disbursalDate}}</strong>
                {{/disbursalDate}}
                {{^disbursalDate}}
                    <strong>Disbursed after fully funded on Kiva.</strong>
                {{/disbursalDate}}
            </div>
            <div class="stat">
                <a class="black-underlined">Currency exchange loss:</a>
                <strong>{{currencyExchangeLossScenario}}</strong>
            </div>
            <div class="stat">
                <a class="black-underlined">
                    {{#fieldPartner}}
                        Facilitated by Field Partner:
                    {{/fieldPartner}}
                    {{^fieldPartner}}
                        {{#trustee}}
                            Endorsed by Trustee:
                        {{/trustee}}
                        {{^trustee}}
                            Not Facilitated by a Field Partner or Trustee
                        {{/trustee}}
                    {{/fieldPartner}}
                </a>
                <strong>{{fieldPartner}}{{trustee}}</strong>
            </div>
            <div class="stat">
                <a class="black-underlined">Is borrower paying interest?</a>
                <strong>
                    {{#borrowerPayingInterest}}
                        Yes
                    {{/borrowerPayingInterest}}
                    {{^borrowerPayingInterest}}
                        No
                    {{/borrowerPayingInterest}}
                </strong>
            </div>
            {{#fieldPartner}}
                <div class="stat">
                    <a class="black-underlined">Field Partner risk rating:</a>
                    <strong class="risk-rating">
                        {{#stars}}
                            {{#isFullStar}}
                                <svg class="icon icon-star"><use xlink:href="#icon-star"></use></svg>
                            {{/isFullStar}}
                            {{#isHalfStar}}
                                <svg class="icon icon-half-star"><use xlink:href="#icon-half-star"></use></svg>
                            {{/isHalfStar}}
                            {{#isEmptyStar}}
                                <svg class="icon icon-star empty-star"><use xlink:href="#icon-star"></use></svg>
                            {{/isEmptyStar}}
                        {{/stars}}
                    </strong>
                </div>
            {{/fieldPartner}}
            {{^fieldPartner}}
                <div class="stat">
                    <a class="black-underlined">Risk rating:</a>
                    <strong>N/A</strong>
                </div>
            {{/fieldPartner}}
        </div>
    </div>
</section>