<div class="lend-action show-for-large-up">
    <div class="proceed-to-checkout">
        <div kvtrackevent="Borrower Profile|click-Browse more|Borrower Profile|{{business_id}}|true" class="browse-more-loans" style="display: none;">
            <a href="#">Browse more loans</a>
        </div>
        {{#amountInBasket}}
            <div class="value-in-basket">
                ${{amountInBasket}} in basket
            </div>
        {{/amountInBasket}}


        <button kvtrackevent="Lending|click-Proceed to checkout|Borrower Profile|{{business_id}}|true" class="button proceed-to-checkout-button" {{^amountInBasket}}style="display: none;"{{/amountInBasket}}>
            <svg class="icon icon-check-in-circle">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-check-in-circle"></use>
            </svg>
            Proceed to checkout
        </button>
    </div>
</div>
