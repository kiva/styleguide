<h3 class="filter">Countries</h3>
<div class="filter country-filter-box show-for-medium-up">
    <a href="#" data-reveal-id="countrySelectModal">
        <svg class="icon icon-globe" width="23" height="23">
            <use xlink:href="#icon-globe"/>
        </svg>
        <span class="filter country-filter-text">Select a country</span>
    </a>

    <div id="countrySelectModal" class="reveal-modal filters_countries" data-reveal>
        <form id="allCountries">
			{{#countries_by_column}}
                <div class="country filter checkbox-input show-for-medium-up">
					{{> 02-organisms/05-filters/14-countries-items}}
                </div>
			{{/countries_by_column}}

            <input type="submit" id="filter-country-submit" class="applyButton smaller" value="Done" />
        </form>
    </div>
</div>

<div class="show-for-small-only">
    <hr/>
    <a href="#"><div class="filter mobile-filter-sub-menu">Select a Country
        <svg class="icon-small-chevron-mobile" style="width:20;height:20;float:right">
            <use xlink:href="#icon-small-chevron-mobile" transform='rotate(270 10 10)'/>
        </svg>
    </div></a>
    <hr/>
</div>