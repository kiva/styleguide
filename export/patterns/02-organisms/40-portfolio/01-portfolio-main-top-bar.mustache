<div class="portfolio-main">
    <div class="row">
        <div class="columns large-12">
            <div class="impact lender-name">{{lenderName}}</div>
        </div>
    </div>

    <div class="row">
        {{#outstandingBalanceStat}}
            <div class="columns small-6 {{#freeCreditStat}}large-3{{/freeCreditStat}}{{^freeCreditStat}}large-6{{/freeCreditStat}}">
                {{> 01-molecules/06-components/10-statistic-display}}
            </div>
        {{/outstandingBalanceStat}}

        {{#availableKivaCreditStat}}
            <div class="columns small-6 large-6">
                {{> 01-molecules/06-components/12-statistic-display-with-local-lightbox}}
            </div>
        {{/availableKivaCreditStat}}

        {{#freeCreditStat}}
            <div class="columns small-12 large-3">
                {{> 01-molecules/06-components/10-statistic-display}}
            </div>
        {{/freeCreditStat}}
    </div>

    <div class="row">
        <div class="columns small-12 large-12 bottom-rule">
            <a href="{{findALoanUrl}}" class="button findALoanButton">{{findALoanText}}</a>
        </div>
    </div>
</div>

{{> 01-molecules/10-lightbox/11-credit-summary-lightbox}}