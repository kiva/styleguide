<div class="global-promo-bar">
	<div class="row align-center default-banner gift-banner">
		<a href="{{header_promo.href}}"
			class="banner-link"
			kvtrackevent="TopNav|click-Promo|{{analytics_label}}|undefined|true">
			{{#header_promo.icon}}
			<svg class="icon {{header_promo.icon}}">
				<use xlink:href="#{{header_promo.icon}}"></use>
			</svg>
			{{/header_promo.icon}}
			<div class="content">
				{{#is_holiday_mode_active}}
					<div class="call-to-action-text">{{header_promo.call_to_action}}</div><div class="primary-message">{{header_promo.message}}</div>
				{{/is_holiday_mode_active}}
				{{^is_holiday_mode_active}}
					<div class="call-to-action-text">{{header_promo.call_to_action}}</div><div class="primary-message">{{header_promo.message}}</div>
				{{/is_holiday_mode_active}}
			</div>
		</a>
	</div>
</div>
