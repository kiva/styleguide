{{#is-standalone}}
	<form data-abide="ajax" class="settingsForm xbLegacyNav auto-deposit-form">
{{/is-standalone}}

{{#is_mg_active}}
	{{#is_one_time}}
		<h3 class="formTitle">Global COVID-19 Response Lending</h3>
	{{/is_one_time}}
	{{^is_one_time}}
		<h3 class="formTitle">Monthly Good</h3>
	{{/is_one_time}}

	{{^is_subscriber}}
		<p>
			<a href="{{mg_landing_url}}">Sign up for a Kiva Monthly Good subscription</a>
		</p>
	{{/is_subscriber}}
{{/is_mg_active}}

{{^is_subscriber}}
	<h3 class="formTitle">Auto deposits</h3>

	{{^has_auto_deposit}}
		<p>
			<a href="{{setup_url}}">Add money to your account every month</a>
		</p>
	{{/has_auto_deposit}}
{{/is_subscriber}}


{{#has_auto_deposit}}
	{{#is_one_time}}
		<p class="one-time-message">
			Thank you for supporting those affected by COVID-19. Your deposit will occur within one hour, after which you will be unable to cancel.
			<a class="cancel-contribution" href="#">Cancel contribution</a>
		</p>
	{{/is_one_time}}
	{{^is_one_time}}
		<div class="date-details">
			{{#day_of_month}}
				<span>On the </span>
				{{#edit_date}}
					<div class="day-input">
						<input type="text"
							   value="{{day_of_month}}"
							   data-abide-validator="ordinalDayOfMonth"
							   data-min-day="1"
							   data-max-day="31"
							   required>
						<small class="error">
							<svg class="icon icon-error">
								<use xlink:href="#icon-error"/>
							</svg>
							Enter day of month - 1 to 31
						</small>
					</div>
				{{/edit_date}}
				{{^edit_date}}
					<a href="#" class="edit-day">
						{{day_of_month}}
						<svg class="icon icon-pencil">
							<use xlink:href="#icon-pencil"/>
						</svg>
					</a>
				{{/edit_date}}
				<span> of each</span>
			{{/day_of_month}}
			{{^day_of_month}}
				<span>Each</span>
			{{/day_of_month}}
			<span> month </span><span class="total-amount">{{total_amount}}</span><span> will be transferred from PayPal.</span>
			{{^legacy}}
				{{#is_subscriber}}
					<a class="cancel-subscription" href="#">Cancel Monthly Good</a>
				{{/is_subscriber}}
				{{^is_subscriber}}
					<a class="cancel-deposit" href="#">Cancel auto deposit</a>
				{{/is_subscriber}}
			{{/legacy}}
			{{#is_date_after_28th}}
				{{^edit_date}}
					<br/>
					<small class="after-28-note">(May be processed on the last day of the month)</small>
				{{/edit_date}}
			{{/is_date_after_28th}}
		</div>
	{{/is_one_time}}
	<div class="deposit-details">
		<div class="deposit-amount-input">
			{{#legacy}}
				<span>{{deposit_amount}}</span>
			{{/legacy}}
			{{^legacy}}
				<input id="deposit-amount-input"
					   type="text"
					   maxlength="9"
					   placeholder="$"
					   value="{{deposit_amount}}"
					   data-abide-validator="currency"
					   data-min-amount="0.00"
					   data-max-amount="10000"
					   required>
				<small class="error">
					<svg class="icon icon-error">
						<use xlink:href="#icon-error"/>
					</svg>
					$10,000 limit
				</small>
			{{/legacy}}
			<label>Deposit for lending</label>
		</div>
		<div class="donation-amount-input">
			{{#legacy}}
				<span>{{donation_amount}}</span>
			{{/legacy}}
			{{^legacy}}
				<input id="donation-amount-input"
					   type="text"
					   maxlength="9"
					   placeholder="$"
					   value="{{donation_amount}}"
					   data-abide-validator="currency"
					   data-min-amount="0.00"
					   data-max-amount="10000"
					   required>
				<small class="error">
					<svg class="icon icon-error">
						<use xlink:href="#icon-error"/>
					</svg>
					$10,000 limit
				</small>
			{{/legacy}}
			<label>Optional donation to support Kiva</label>
		</div>
	</div>
	{{^legacy}}
		{{#is_subscriber}}
			{{^is_one_time}}
				{{#selected_category}}
					<div class="category-selection">
						<label for="mg-category-select">{{mgCategorySelectHeading}}</label>
						<select id="mg-category-select">
							{{#mg_category_options}}
								<option value="{{value}}" {{#selected}}selected="selected"{{/selected}}>{{title}}</option>
							{{/mg_category_options}}
						</select>
					</div>
				{{/selected_category}}
			{{/is_one_time}}
		{{/is_subscriber}}
	{{/legacy}}	
	{{^legacy}}
		<div class="total-amount-minimum">
			<input type="text"
				   data-abide-validator="sum"
				   data-min-sum="0.01"
				   data-sum-inputs="deposit-amount-input,donation-amount-input">
			<small class="error">
				<svg class="icon icon-error">
					<use xlink:href="#icon-error"/>
				</svg>
				{{#is_one_time}}
					To cancel your contribution, please use the link above.
				{{/is_one_time}}
				{{^is_one_time}}
					To cancel your existing auto deposit, please use the link above.
				{{/is_one_time}}
			</small>
		</div>
		<div class="total-amount-maximum">
			<input type="text"
				   data-abide-validator="sum"
				   data-max-sum="10000"
				   data-sum-inputs="deposit-amount-input,donation-amount-input">
			<small class="error">
				<svg class="icon icon-error">
					<use xlink:href="#icon-error"/>
				</svg>
				The maximum deposit allowed is $10,000. Please try again by entering in a smaller amount.
			</small>
		</div>
		<button type="submit" class="submit-form secondary button" {{^submittable}}disabled="disabled"{{/submittable}}>
			{{^loading}}
				Save changes
			{{/loading}}
			{{#loading}}
				{{> molecules-loading-spinner }}
				Saving
			{{/loading}}
		</button>
		<a class="reset-form {{^loading}}{{#changed}}visible{{/changed}}{{/loading}}" href="#">Reset</a>
	{{/legacy}}
	{{#legacy}}
		<div class="panel callout">
			<p>
				Because you have an existing auto deposit, to make changes you'll need to <a href="{{cancel_url}}">cancel your current auto deposit via PayPal</a> and then return to Kiva to set up a new one.
				{{#other_cancel_url}}
					<br/><br/>
					Looks like you have two. You'll also need to <a href="{{other_cancel_url}}">cancel your second auto deposit via PayPal.</a>
				{{/other_cancel_url}}
			</p>
		</div>
	{{/legacy}}
{{/has_auto_deposit}}

{{#is-standalone}}
	</form>
{{/is-standalone}}
