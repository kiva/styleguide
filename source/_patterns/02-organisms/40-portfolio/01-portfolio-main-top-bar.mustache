<div class="portfolio-main">
	<div class="top-wrapper small-12 large-10 columns">
		<div class="row">
			<div class="small-12 columns lender-name">
				<h4 class="light data-hj-suppress">
					{{lenderName}}'s Portfolio
				</h4>
			</div>
		</div>

		<div class="row">
			<div class="columns small-12">
				{{#availableKivaCreditStat}}
					<h3 class="strong">
						<span class="kiva-green">${{kivaAndFreeCredit}}</span> available to lend
					</h3>
				{{/availableKivaCreditStat}}

				{{#freeCreditStat}}
					<h5 class="credit-breakdown light">{{kivaCredit}} Kiva credit {{statisticValue}} free credit{{#freeCreditExp}} ({{freeCreditExp}}){{/freeCreditExp}}</h5>

				{{/freeCreditStat}}

				<table class="table-basic balance-details">
					<tbody>
						<tr>
							<td>
								<h5 class="light">Outstanding loans</h5>
							</td>
							<td>
								<h5>{{outstandingBalance}}</h5>
							</td>
						</tr>

						{{#enoughToLend}}
							{{#autoLoanDate}}
								<tr>
									<td>
										<h5 class="light">Kiva Credit will be auto-loaned</h5>
									</td>
									<td>
										<h5>{{autoLoanDate}}</h5>
									</td>
								</tr>
							{{/autoLoanDate}}
							{{^timeZero}}
								{{#cIdleStartTime}}
									<tr>
										<td>
											<h5 class="light">Youâ€™ve been ready to lend for</h5>
										</td>
										<td>
											<h5 class="days">{{numberOfDays}} day{{#multipleDays}}s{{/multipleDays}}</h5>
										</td>
									</tr>
								{{/cIdleStartTime}}
								{{#lastManualLoan}}
									<tr>
										<td>
											<h5 class="light">You made your last manual loan</h5>
										</td>
										<td>
											<h5 class="days">{{numberOfDays}} day{{#multipleDays}}s{{/multipleDays}} ago</h5>
										</td>
									</tr>
								{{/lastManualLoan}}
							{{/timeZero}}
						{{/enoughToLend}}
					</tbody>
				</table>
			</div>
		</div>

		<div class="row">
			<div class="columns small-centered small-10 large-uncentered large-6">
				<a href="{{findALoanUrl}}" class="button">{{findALoanText}}</a>
			</div>
			{{#autoDepositText}}
				<div class="columns small-centered small-10 large-uncentered large-6 end">
					<a href="{{autoDepositUrl}}" class="button secondary">{{autoDepositText}}</a>
				</div>
			{{/autoDepositText}}
		</div>
	</div>
	<div class="row bottom-rule">
	</div>
</div>

{{> 01-molecules/10-lightbox/11-credit-summary-lightbox}}
