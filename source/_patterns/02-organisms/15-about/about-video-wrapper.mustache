<a href="#" data-reveal-id="beyond-charity-video">
	<div class="about-video-wrapper">
		{{> atoms-full-width-image(img.full-width.src: "http://cms.kiva.org.s3.amazonaws.com/page/images/about-video", img.full-width.alt: "photo of Kiva borrower")}}

		<div class="button-wrapper">
			<div class="play-button">
				<svg class="icon icon-triangle">
					<use xlink:href="#icon-triangle"></use>
				</svg>
				<span>What does Kiva mean to you?</span>
			</div>
		</div>
	</div>
</a>

<section class="videoLightbox">
    <div id="beyond-charity-video" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="video">
        <div class="flex-video widescreen vimeo">
            <iframe width="{{lightbox.video.youtube.width}}" height="{{lightbox.video.youtube.height}}" src="{{lightbox.video.youtube.src}}" frameborder="{{lightbox.video.youtube.frameborder}}" allowfullscreen></iframe>
        </div>

        <a class="close-reveal-modal" aria-label="Close">
            <svg class="icon icon-x">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-x"></use>
            </svg>
        </a>
    </div>
</section>