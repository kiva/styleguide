<!--This top container div is used to apply styles from monthly-good.scss-->
<div class="monthly-good-landing-page">

	<div class="how-works-section-wrapper">
		<div class="row how-works-section text-center white">
			<div class="small-12 columns section-title">
				<h1 class="white">
					{{section-title}}
				</h1>
			</div>
			<div class="small-12 xlarge-4 columns column-wrap">
				<svg class="icon icon-auto-deposit-alternate">
					<use xlink:href="#icon-auto-deposit-alternate"/>
				</svg>
				<h2 class="white">{{contribute-column-title}}</h2>
				<p>{{contribute-column-text}}<p>
			</div>
			<div class="small-12 xlarge-4 columns column-wrap">
				<svg class="icon icon-lend">
					<use xlink:href="#icon-lend"/>
				</svg>
				<h2 class="white">{{help-entreprenurs-title}}</h2>
				<p>{{help-entreprenurs-text}}</p>
			</div>
			<div class="small-12 xlarge-4 columns column-wrap">
				<svg class="icon icon-updates-alternate">
					<use xlink:href="#icon-updates-alternate"/>
				</svg>
				<h2 class="white">{{receive-stories-title}}</h2>
				<p>{{receive-stores-text}}</p>
			</div>

			<div class="small-12 columns">
				<p>{{repaid-text}}</p>
			</div>
		</div>
	</div>

</div>
