{{#trustee}}
	<div class="trustee-listing-row row">

		<div class="small-12 medium-3 large-2 columns image">
			<a href="{{profileHref}}"><img alt="Image for trustee {{title}}" src="{{imageSmall}}"></a>
		</div>
		<div class="small-12 medium-5 large-6 columns">
			<div class="name-location">
				<a href="{{profileHref}}">{{title}}</a><br/>
				<p class="small-text">
					{{#contactRecord}}<b>{{city}}, {{state}}</b><br/>{{/contactRecord}}
					{{! timeOnKiva - e.g. 32 month(s) }}
					{{#timeOnKiva}}<em>joined kiva {{timeOnKiva}}</em><br/>{{/timeOnKiva}}
					{{organizationType}}
				</p>
			</div>
			{{! story = whyInterested truncated 300 characters}}
			<p class="story">{{story}}</p>
		</div>

		<div class="small-12 medium-4 large-4 columns stats">
			{{#stats}}
				<span class="small-text">
					{{#prettyRepaymentRate}}
						{{! repaymentRate should have % already appended }}
						<span class="big-stat">{{prettyRepaymentRate}}</span>
						repayment rate<br/>
					{{/prettyRepaymentRate}}

					{{#numLoansEndorsedTotal}}{{totalValue}} in {{numLoansEndorsedTotal}} loan(s)<br/>{{/numLoansEndorsedTotal}}
					{{#numFundraisingLoans}}
						<a href="{{fundraisingLoansHref}}">{{numFundraisingLoans}} loan(s)</a>
						fundraising now!
					{{/numFundraisingLoans}}
				</span>
			{{/stats}}
		</div>
	</div>
{{/trustee}}