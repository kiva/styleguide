<div class="loan-card">
    <a class="borrower-img-wrap" href="#">
        <img class="borrower-img" src="{{img.borrower.src}}" >
        {{#show_loan_length}}
            <div class="loan-message">{{loan_length}}</div>
        {{/show_loan_length}}
        {{^show_loan_length}}
            {{#expiring_soon}}
                <div class="loan-message urgent">{{expiring_message}}</div>
            {{/expiring_soon}}
        {{/show_loan_length}}
    </a>

    <div class="borrower-details-wrap" data-equalizer-watch>
        <a href="#">{{title}}</a>
        <div class="country">
			<span class="f16 {{country.code}}"></span>{{country.name}}
        </div>

		<p class="small-text">{{description}}</p>
    </div>

    <div class="borrower-footer-wrap">
        <div class="fundraising-meter progress {{#progress.repaying}}repaying{{/progress.repaying}}">
            <span class="meter" style="width:{{progress.percent}}%"></span>
            <span class="caption">{{progress.message}}</span>
        </div>

        {{^progress.repaying}}
            {{#is_regular}}
                <div class="bottom-bar">
                    <a class="half-width button" href="#">Lend $25</a>
                    <a class="half-width button" href="#">Read More</a>
                </div>
            {{/is_regular}}
            {{#is_lent_to}}
                <div class="bottom-bar show-short">
                    <a class="success button" href="#">
                        <svg class="icon">
                            <use xlink:href="#icon-checkmark" />
                        </svg>
                        <span>You've lent to this loan</span>
                    </a>
                </div>
                <div class="bottom-bar hide-for-touch">
                    <a class="button" href="#">Lend Again</a>
                </div>
            {{/is_lent_to}}
            {{#is_adding}}
                <div class="bottom-bar no-hide">
                    <div class="message">
                        <img class="loader" src="{{img.loan-card-loader.src}}">Adding to basket
                    </div>
                </div>
            {{/is_adding}}
            {{#is_in_basket}}
                <div class="bottom-bar show-short">
                    <a class="success button" href="#">
                        <svg class="icon">
                            <use xlink:href="#icon-checkmark" />
                        </svg>
                        <span>$25 in basket</span>
                    </a>
                </div>
                <div class="bottom-bar hide-for-touch">
                    <a class="success button" href="#">
                        <svg class="icon">
                            <use xlink:href="#icon-checkmark" />
                        </svg>
                        <span>Proceed to checkout</span>
                    </a>
                </div>
            {{/is_in_basket}}
        {{/progress.repaying}}
    </div>
</div>