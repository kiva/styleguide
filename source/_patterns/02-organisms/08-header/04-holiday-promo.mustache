{{! This is the holiday banner that is shown in the xlarge-up screen state}}
<div class="show-for-xlarge-up holiday-promo">
	<a href="{{holiday_mode.href}}">
		<svg class="icon icon-line-graph">
			<use xlink:href="#icon-line-graph"></use>
		</svg>
		<div class="content">
			<span class="show-for-xxlarge-up">{{holiday_mode.long_message}}<br></span>
			{{holiday_mode.short_message}}
		</div>
	</a>
</div>
