<div class="control-box">
	<a href="#" class="hide-for-xxlarge-up filter-menu-button button setting left-off-canvas-toggle">
		<svg class="icon icon-filter">
			<use xlink:href="#icon-filter"/>
		</svg>
		Filters
	</a>

	<div class="filter-menu-sort">
		<span class="filter-menu-sort-text" class="small-text">Sort By:&nbsp;&nbsp;&nbsp;</span>
			<span class="filter-menu-sort-dropdown">
				<select name="sort[]" id="filter-loan-sort-dropdown" class="filter-dropdown">
					{{#sort_options}}
						<option value="{{value}}" {{selected}}>{{label}}</option>
					{{/sort_options}}
				</select>
			</span>
	</div>
	<div style="clear:both"></div>

	{{#is-category-page}}
		{{> 01-molecules/00-text/05-category-page-head}}
	{{/is-category-page}}


</div>
{{^is-category-page}}
	<div class="secondary-nav filter-loan-count">
		<span id="filtered_loan_count"></span>
		loans
		<span><a href="#" class="hide-for-small filter-links filter-clear-button clear-touch">Clear all</a></span>
		<span><a href="#" class="hide-for-small filter-links save-search-button clear-touch"
				 data-reveal-id="save-search-modal">Save search</a></span>
	</div>
{{/is-category-page}}

<div id="save-search-modal" class="reveal-modal" data-reveal>
	<div class="row">
		<div class="columns small-12">
			<a class="close-reveal-modal" aria-label="Close">
				<svg class="icon icon-x">
					<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-x"></use>
				</svg>
			</a>
			<div class="lightbox-content white">
				<div class="columns small-7">
					<input type="text" name="save-search-text">
				</div>
				<div class="columns small-4">
					<button class="button submit-save-search">Save Search</button>
				</div>
				<div class="columns small-offset-1"></div>
			</div>
		</div>
	</div>
</div>