<section class="country-info" id="country-section">
    <h2 class="ac-title ac-container" data-kv-accordion aria-controls="ac-country-info-body" aria-expanded="true">
        Country information
        <span class="ac-dropdown-icon">
            <svg class="icon icon-large-chevron">
                <use xlink:href="#icon-large-chevron"></use>
            </svg>
        </span>
    </h2>
    <div class="ac-body" id="ac-country-info-body" aria-hidden="false">
        <div class="country-map row">
            <div id="mapPane"></div>
        </div>
        <div class="country-stats row">
            {{#fieldPartnerLoanStats}}
                <div class="stat small-12 large-6 columns">
                    <div class="description"><span class="black-underlined">Average annual income (USD)</span>:</div>
                    <div class="data-point featured">{{avgAnnualIncome}}</div>
                </div>
                <div class="stat small-12 large-6 columns">
                    <div class="description"><span class="black-underlined">Funds lent in {{countryName}}</span>:</div>
                    <div class="data-point featured">{{#fundsLentInCountry}}{{fundsLentInCountry}}{{/fundsLentInCountry}}{{^fundsLentInCountry}}&nbsp;{{/fundsLentInCountry}}</div>
                </div>
                {{#inUSD}}
                    <div class="stat small-12 large-6 columns">
                        <div class="description black-underlined">Loan transacted in USD</div>
                        <div class="data-point featured">US Dollars</div>
                    </div>
                {{/inUSD}}
                {{^inUSD}}
                    <div class="stat small-12 large-6 columns">
                        <div class="description"><span class="black-underlined">{{currencyFullName}} ({{currencyCode}}) = $1</span>:</div>
                        <div class="data-point featured">{{exchangeRate}}</div>
                    </div>
                {{/inUSD}}
                <div class="stat small-12 large-6 columns">
                    <div class="description"><span class="black-underlined">Loans currently fundraising</span>:</div>
                    <div class="data-point featured">{{numLoansFundraising}}</div>
                </div>
            {{/fieldPartnerLoanStats}}
            {{#directLoanStats}}
                <div class="stat small-12 large-6 columns">
                    <div class="description"><span class="black-underlined">Loans to ethnic minorities</span>:</div>
                    <div class="data-point featured">{{percentLoansToMinorities}}</div>
                </div>
                <div class="stat small-12 large-6 columns">
                    <div class="description"><span class="black-underlined">Comments per loan</span>:</div>
                    <div class="data-point featured">{{commentsPerLoan}}</div>
                </div>
            {{/directLoanStats}}
        </div>
    </div>
</section>