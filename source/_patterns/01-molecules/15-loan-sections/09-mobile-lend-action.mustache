<div class="mobile-lend-action show-for-medium-down row">
    {{#alreadyLent}}
        <div id="already-supported-message-mobile" class="columns small-12">You've supported this loan</div>
    {{/alreadyLent}}
    <div class="basket-buttons">
        {{^inBasket}}
            <div class="not-in-basket">
                <div id="loan-amount" class="columns small-4">
                    <button data-options="align:top; ignore_repositioning:true" data-dropdown="drop"
                            class="button dropdown lend-button loan-amount-button">$25
                    </button>
                    <ul id="drop" class="tiny f-dropdown" data-dropdown-content>
                        {{#lendValues}}
                            <li><a href="#">${{amount}}</a></li>
                        {{/lendValues}}
                    </ul>
                </div>
                <div id="lend-button" class="columns small-5">
                    <button class="button">Lend Now</button>
                </div>
                <div id="basket-button" class="columns small-3">
                    <div class="button">
                        <div class="row" id="basket-text">
                            Basket
                        </div>
                        <div class="row">
                            1
                        </div>
                    </div>
                </div>
            </div>
        {{/inBasket}}
        {{#inBasket}}
            <div class="in-basket">
                <div id="checkout-button" class="columns small-9">
                    <button class="button">Checkout</button>
                </div>
                <div id="basket-button" class="columns small-3">
                    <div class="button">
                        <div class="row" id="basket-text">
                            Basket
                        </div>
                        <div class="row amount-in-basket">
                            1
                        </div>
                    </div>
                </div>
            </div>
        {{/inBasket}}
    </div>
</div>