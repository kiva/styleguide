<div class="loan-lifecycle-wrapper">
	<div class="how-kiva-works-title">
		<h1 class="huge text-center white">{{howKivaWorksTitle}}</h1>
	</div>
	<div class="text-frame text-center white">
		<p class="text-step step-1">{{{step1Text}}}</p>
	</div>
	<div class="dotted-line"></div>
	<div class="text-frame text-center white">
		<p class="text-step step-2">{{{step2Text}}}</p>
	</div>
	<div class="dotted-line"></div>
	<div class="loan-disbursal-wrapper">
		<div class="loan-disbursal-container">
			<div class="text-box">
				<p class="text-center">{{{loanDisbursalTitle}}}</p>
			</div>

			<div class="dotted-line white"></div>

			<svg class="icon icon-choose">
				<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-choose"></use>
			</svg>

			<div class="text-frame text-frame-icon-overlay text-center white">
				<p class="text-step step-3">{{{step3Text}}}</p>
			</div>

			<div class="fundraising-period-container text-center white">
				<div class="fundraising-period-text-wrapper text-step step-4">
					<p class="fundraising-period-title">{{{fundraisingPeriodTitle}}}</p>
					<p>{{{fundraisingPeriodText}}}</p>
				</div>

				<svg class="icon icon-lend">
					<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-lend"></use>
				</svg>

				<div class="dotted-line"></div>

				<div class="text-frame text-center white">
					<p class="text-step step-5">{{{step5Text}}}</p>
				</div>
			</div>
		</div>
	</div>
	<div class="dotted-line white"></div>
	<svg class="icon icon-repaid">
		<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-repaid"></use>
	</svg>
	<div class="text-frame-icon-overlay text-center white">
		<p class="text-step step-6">{{{step6Text}}}</p>
	</div>
	<div class="dotted-line white"></div>
	<svg class="icon icon-repeat">
		<use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-repeat"></use>
	</svg>
	<div class="text-frame-icon-overlay text-center white">
		<p class="text-step step-7">{{{step7Text}}}</p>
	</div>
</div>