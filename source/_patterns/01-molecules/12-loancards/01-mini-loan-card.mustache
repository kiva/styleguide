<div class="mini-loan-card">
	<a class="image" href="{{url}}">
		<img alt="Photo of {{name}}" src="" data-interchange="{{#image.sizes}}[{{url}}, ({{size}})],{{/image.sizes}}">
	</a>
	{{#dedication}}
		<a class="dedication" href="{{url}}">
			<svg class="icon icon-dedicate-heart">
				<use xlink:href="#icon-dedicate-heart"/>
			</svg>
			<span>Dedicated to</span>
			<span>{{recipient}}</span>
		</a>
	{{/dedication}}
	{{^dedication}}
		{{#progress}}
			{{> 01-molecules/08-meters/fundraising-meter }}
		{{/progress}}
	{{/dedication}}
	{{^progress}}
		<div class="spacer"></div>
	{{/progress}}
	<div class="status">{{status}}</div>
	<a class="name">{{name}}</a>
	<div class="activity">{{activity}}</div>
	<div class="country">
		<span class="f16 {{country.iso_code}}"></span>{{country.name}}
	</div>
</div>
