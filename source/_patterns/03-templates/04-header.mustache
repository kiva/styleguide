<div class="top-nav" role="navigation">
	<div class="row header-row">
		<div class="show-for-xxlarge-up xxlarge-4 xxlarge-centered columns promo-space">
			{{#bonus}}
				<a href="{{bonus.href}}"><span class="amount">{{bonus.amount}}</span> {{bonus.label}}</a>
			{{/bonus}}
			{{^bonus}}
				<span class="promo"><!-- Promo Space --></span>
			{{/bonus}}
		</div>
		<div class="small-3 large-2 xxlarge-2 columns header-column logo-area">
			<a class="header-button" href="{{logo_href}}"><img src="/images/kiva-logo.min.svg" data-interchange="[/images/kiva-word-mark.min.svg, (default)], [/images/kiva-logo.min.svg, (medium)]"></a>
		</div>
		<div class="small-3 large-2 xxlarge-1 columns header-column">
			<a data-dropdown="lend-dropdown" aria-controls="lend-dropdown" aria-expanded="false" class="header-button" href="{{lend_href}}">Lend <svg class="icon"><use xlink:href="#icon-triangle" /></svg></a>
		</div>
		{{> 02-organisms/08-header/01-search-button}}
		{{#is-visitor}}
			<div class="small-6 xxlarge-3 columns header-column right-side">
				<div class="small-6 large-4 columns">
					<a data-dropdown="about-dropdown" aria-controls="about-dropdown" aria-expanded="false" class="header-button" href="#">About <svg class="icon"><use xlink:href="#icon-triangle" /></svg></a>
				</div>
				<div class="show-for-large-up large-4 columns">
					<a class="header-button" href="{{basket_href}}">{{#basket.item_count}}<span class="amount">{{basket.item_count}}</span>{{/basket.item_count}} Basket</a>
				</div>
				<div class="small-6 large-4 columns">
					<a class="header-button" href="{{login_href}}">Sign in</a>
				</div>
			</div>
		{{/is-visitor}}
		{{^is-visitor}}
			<div class="small-3-8ths xxlarge-2 columns header-column right-side">
				<div class="show-for-large-up large-6 columns">
					<a class="header-button" href="{{basket_href}}">{{#basket.item_count}}<span class="amount">{{basket.item_count}}</span>{{/basket.item_count}} Basket</a>
				</div>
				<div class="small-12 large-6 columns">
					<a data-dropdown="my-kiva-dropdown" aria-controls="my-kiva-dropdown" aria-expanded="false" class="header-button my-kiva" href="#">
						<span class="amount">{{balance}}</span><img class="profile" src="{{profile_picture_href}}" alt="Profile Picture">
					</a>
				</div>
			</div>
		{{/is-visitor}}
		{{> 02-organisms/08-header/02-search-box}}
	</div>

	{{> 02-organisms/08-header/03-lend-menu}}

	{{#is-visitor}}
		<ul id="about-dropdown" class="f-dropdown dropdown-list" data-dropdown-content aria-hidden="true" tabindex="-1">
			{{#about-nav.links}}
				<li><a href="{{href}}">{{label}}</a></li>
			{{/about-nav.links}}
		</ul>
	{{/is-visitor}}

	{{^is-visitor}}
		<ul id="my-kiva-dropdown" class="f-dropdown dropdown-list" data-dropdown-content aria-hidden="true" tabindex="-1">
			{{#my-kiva.links}}
				<li><a href="{{href}}" {{#end-section}}class="end-section"{{/end-section}}>{{label}}</a></li>
			{{/my-kiva.links}}
		</ul>
	{{/is-visitor}}
{{! This is the bonus banner that is shown in the medidum screen state}}
	{{#bonus}}
		<div class="hide-for-xxlarge-up pronus"><a href="{{bonus.href}}"><span style="font-weight: normal;">Select a borrower to <span style="font-weight: bold;">Redeem your {{bonus.amount}} {{bonus.label}}</span></span></a></div>
	{{/bonus}}
</div>

{{#basket.item_count}}
	<div class="hide-for-large-up basket-bar"><a href="{{basket_href}}">Basket ({{basket.item_count}})</a></div>
{{/basket.item_count}}