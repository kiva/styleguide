                                <li class="cost-filter-submenu-wrap">
                                    <label>Average Cost To Borrowers (%)</label>
                                    <div class="filter-slider">
                                        <div class="loan-repayments-slider"></div>
                                    </div>
                                </li>

                                <li class="profit-filter-submenu-wrap">
                                    <label>Partner Profitability (%)</label>
                                    <div class="filter-slider">
                                        <div class="loan-repayments-slider"></div>
